---
import infoArisha from "./../assets/jsons/infoArisha.json"

const information = infoArisha[1]
---
<footer class="fl-column">
  <div class="fl-evenly-wrap">
    <div class="container fl-column">
      <img src="images/logo.webp" alt="" />
    </div>
    <div class="container fl-column">
      <h2>Conoce a Arisha</h2>
      <a href="#arisha">Sobre Arisha</a>
      <a href="#servicios">Servicios</a>
      <a href="#testimonios">Testimonios</a>
    </div>
    <div class="container fl-column">
      <h2>Contacta a Arisha</h2>
      {information.tel?.trim() !== '' &&  (
      <a href={"tel:"+ information.tel}>{ information.tel }</a>
      )}
      {information.email?.trim() !== '' &&  (
      <a href={"mailto:"+ information.email}>{information.email}</a>
    )}
    </div>
    <div class="container fl-evenly-wrap">
      {information.facebook?.trim() !== '' &&  (
      <a href={information.facebook}><i class="bi bi-facebook"></i></a>
    )}
    {information.whatsapp?.trim() !== '' &&  (
      <a href={information.whatsapp}><i class="bi bi-whatsapp"></i></a>
    )}
    {information.instagram?.trim() !== '' &&  (
      <a href={information.instagram}><i class="bi bi-instagram"></i></a>
    )}
    {information.threads?.trim() !== '' &&  (
      <a href={information.threads}><i class="bi bi-threads-fill"></i></a>
      )}
  {information.twitter?.trim() !== '' &&  (
      <a href={information.twitter}><i class="bi bi-twitter-x"></i></a>
    )}
    </div>
  </div>
  <hr />
  <div class="fl-evenly-wrap xd">
    <h2>Â©2025 Arisha Awo Wellness. Todos los derechos reservados</h2>
    <h3>
      Powered By <a href="https://nuevaeradigital.mx/" target="_blank"
        >Nueva Era Digtal</a>
    </h3>
  </div>
</footer>

<style>
  footer {
    background: var(--primaryColorBase);
    padding: var(--space);
  }

  .container {
    width: 300px;
  }

  .container > img {
    width: 100%;

    filter: drop-shadow(0px 1px 2px var(--secondaryColorLight));
  }
  .container > i {
    color: var(--secondaryColorLight);
    font-size: calc(var(--space) * 2);
  }

  .container > a {
    color: #fff;
    i {
      color: var(--secondaryColorLight);
      font-size: calc(var(--space) * 2);
    }
  }

  h2 {
    color: var(--secondaryColorLight);
  }

  hr {
    width: 100%;

    height: 1px;
    background: var(--secondaryColorLight);
    border: none;
  }

  .fl-evenly-wrap h2 {
    width: fit-content;
    padding: calc(var(--space) / 2);
  }

  .fl-evenly-wrap h3 {
    color: #fff;
  }

  .fl-evenly-wrap h3 a {
    color: var(--secondaryColorLight);
  }
  @media screen and (max-width: 800px) {
    .xd {
      display: flex !important;
      flex-direction: column !important;
    }
    .xd h2 {
      width: 100%;
      text-align: center !important;
    }
  }
</style>
