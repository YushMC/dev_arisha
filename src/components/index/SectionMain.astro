---
import LinksMain from "../../components/linksMain.astro";
import Arisha from "./../../assets/jsons/infoArisha.json";
import images from "./../../assets/jsons/imagesSections.json"

const allImages = images;
const infoArisha = Arisha[0];

---

<section class="st-1" id="arisha">
  <article>
    <picture class="fl-center">
      <img
        src={allImages.imageSectionArisha}
        alt=""
      />
    </picture>
    <aside class="fl-column">
      <h2>Hola, Soy Arisha</h2>
      <p>
        {infoArisha.description}
      </p>
      <h2>Empecemos</h2>
      <p>
       {infoArisha.phrase}
      </p>
      <LinksMain link="#servicios" text="Servicios" />
    </aside>
  </article>
</section>

<style>
  .st-1 {
    width: 100%;
    background: var(--secondaryColorLight);
    padding-inline: 10%;
    padding-block: none;
    margin: none;
  }
  .st-1 article {
    display: grid;
    grid-template-columns: 1fr 2fr;
    background: #fff;
    padding-block: var(--space);
  }
  .st-1 picture {
    width: 100%;
    background: #fff;
  }

  .st-1 picture img {
    width: 50%;
    aspect-ratio: 9/16;
    object-fit: cover;
    border-radius: 100%;
    border: solid 2px var(--secondaryColorDark);
  }

  .st-1 p {
    margin-block: var(--space);
  }

  aside {
    padding-block: calc(var(--space) * 3);
    padding-inline: calc(var(--space) * 2);
  }

  @media screen and (max-width: 800px) {
    .st-1 article {
      display: flex;
      flex-direction: column;
      gap: var(--space);
      padding-inline: var(--space);
    }
  }

  .container_swiper {
    width: 100%;
    background: #fff !important;
    padding: var(--space);
  }
</style>
