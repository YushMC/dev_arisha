<style>
  section {
    width: 100%;
    height: fit-content;
    display: grid;
    grid-template-columns: 4fr 1fr;
    gap: var(--space);
    background: #fff;
  }

  .main_image {
    width: 100%;
    height: 100%;
    overflow: hidden;
  }
  .main_image img {
    width: 100%;
    object-fit: cover;
    aspect-ratio: 1/1;
    overflow: hidden;
    border-top-left-radius: 50px;
    border-bottom-left-radius: 50px;
  }
  article {
    width: 80%;
    height: fit-content;
    margin-inline: auto;
    padding-block: calc(var(--space) * 3);
  }

  .card {
    width: 250px;
    height: fit-content;
    padding: var(--space);
  }

  .card picture {
    width: 100%;
  }

  .card picture img {
    width: 100%;
    aspect-ratio: 1/1;
    object-fit: cover;
    object-position: center;
    border-radius: 100%;
  }

  @media screen and (max-width: 800px) {
    .main_image {
      display: none;
    }
    section {
      display: flex;
      flex-direction: column;
    }
  }
</style>
